@model List<WebBancoSucursales.ViewModels.SucursalVM>
<div>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>NOMBRE</th>
                <th>DIRECCIÓN</th>
                <th>FECHA CREACIÓN</th>
                <th></th>
            </tr>
        </thead>
        @if (Model != null && Model.Count > 0)
        {
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.IdBanco
                        </td>
                        <td>
                            @item.Nombre
                        </td>
                        <td>
                            @item.Direccion
                        </td>
                        <td>
                            @(item.FechaRegistro.HasValue ? item.FechaRegistro.Value.ToShortDateString() : string.Empty)
                        </td>
                        <td>
                            @Html.ActionLink("Editar", "Administrar", "Banco", new { idSucursal = item.IdSucursal.Value }, null)
                        </td>
                    </tr>
                }
            </tbody>
        }
        else
        {
            <tbody>
                <tr>
                    <td>No existen registros</td>
                </tr>
            </tbody>
        }
    </table>
</div>